<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    namespace：必须与对应的接口全类名一致
    id:必须与对应接口的某个对应的方法名一致

 -->
<mapper namespace="com.myapp.dao.DaoUtils">

    <select id="queryUser" parameterType="com.myapp.bean.User" resultType="com.myapp.bean.User" useCache="false">
		select * from tb_user t where t.userName = #{username} and t.password = #{password}
    </select>


    <select id="queryUserByPhone" parameterType="com.myapp.bean.User" resultType="com.myapp.bean.User" useCache="false">
		select * from tb_user t where t.phone = #{phone}
    </select>


    <insert id="insertSingle" parameterType="com.myapp.bean.User" useGeneratedKeys="true" keyProperty="id">
        insert into tb_user(phone,password,updateTime,createTime) values(#{phone},#{password},#{updateTime},#{createTime})
    </insert>


</mapper>